<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-3">
            <form class="accession-form">
                <label for="patient">Select a patient:</label>
                <select id="patient" name="patient_dropdown" class="form-control w-100  mb-4">
                    {{#each patients as |item|}}
                    <option value="{{item.id}}">{{item.last_name}}, {{item.first_name}} DOB:{{item.dob}}</option>
                    {{/each}}
                </select>

                <input type="text" class="form-control w-100 mb-4" placeholder="Enter a sequence name" id="seq_name"
                    name="seq_name">

                <input type="submit" class="btn btn-danger">
            </form>
        </div>
    </div>
</div>

<script src="/javascript/accession-case.js"></script>