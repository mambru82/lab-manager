<div class="container">
    <div class="row">
        <form class="signup-form row g-3">
            <div class="col-md-4">
                <label for="firstname-signup" class="form-label"></label>
                <input type="text" placeholder="First name" class="form-control" id="firstname-signup" value="" required>
            </div>
            <div class="col-md-4">
                <label for="lastname-signup" class="form-label"></label>
                <input type="text" placeholder="Last name" class="form-control" id="lastname-signup" value="" required>
            </div>
            <div class="col-md-4">
                <label for="username-signup" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text" id="inputGroupPrepend2">@</span>
                    <input type="text" placeholder="Username" class="form-control" id="username-signup"
                        aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="col-md-6">
                <label for="supervisor-signup" class="form-label"></label>
                <input type="text" placeholder="Supervisor" class="form-control" id="supervisor-signup" required>
            </div>
            
            <div class="col-md-3">
                <label for="password-signup" class="form-label"></label>
                <input type="password" placeholder="Password" class="form-control" id="password-signup" required>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                    <label class="form-check-label" for="invalidCheck2">
                        Agree to terms and conditions
                    </label>
                </div>
            </div>
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
        </form>
    </div>
</div>


